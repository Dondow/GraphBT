package [P];
import java.awt.AWTException;
import java.awt.Robot;
import abs.backend.java.lib.types.ABSString;
import abs.backend.java.lib.types.ABSInteger;
import java.util.*;

import [P].Mouse_c;

public class GUI_fli extends GUI_c {
	private int x;
	private int y;
	private int x2;
	private int y2;
	private boolean stop = true;
	Robot robot;
	Mouse(){
		try {
			robot = new Robot();
		} catch (AWTException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

	public ABSUnit fli_move() {
		
		return abs.backend.java.lib.types.ABSUnit.UNIT;;
	}
	public ABSUnit fli_patrol() {
		stop = false;
		while(!stop)
		{
			robot.mouseMove(x,y);
			robot.delay(1000);
			robot.mouseMove(x2,y2);
			robot.delay(1000);
		}
		return abs.backend.java.lib.types.ABSUnit.UNIT;;
	}
	public ABSUnit fli_setX(ABSInteger x) {
		this.x = x.intValue();
		return abs.backend.java.lib.types.ABSUnit.UNIT;;
	}
	public ABSUnit fli_setY(ABSInteger x) {
		this.y = x.intValue();
		return abs.backend.java.lib.types.ABSUnit.UNIT;;
	}
	public ABSUnit fli_setX2(ABSInteger x) {
		this.x2 = x.intValue();
		return abs.backend.java.lib.types.ABSUnit.UNIT;;
	}
	public ABSUnit fli_setY2(ABSInteger x) {
		this.y2 = x.intValue();
		return abs.backend.java.lib.types.ABSUnit.UNIT;;
	}
}
