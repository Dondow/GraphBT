package [P];

// included in the absfrontend.jar
import abs.backend.java.lib.types.*;
import javax.sound.sampled.AudioInputStream;
import javax.sound.sampled.AudioSystem;
import javax.sound.sampled.Clip;
import java.util.*;
import java.io.*;
// generated by the ABS Java backend
import [P].SoundImpl_c;

public class SoundImpl_fli extends SoundImpl_c {
	public ABSUnit fli_play(ABSString path) {
		try {
	        Clip clip = AudioSystem.getClip();
	        File file = new File(path.getString());
	        InputStream in = new FileInputStream(file);
	        InputStream bufferedIn = new BufferedInputStream(in);
	        AudioInputStream inputStream = AudioSystem.getAudioInputStream(bufferedIn);
	        clip.open(inputStream);
	        clip.start(); 
        } catch(Exception e) {
        	e.printStackTrace();
        }
		return ABSUnit.UNIT;
	}
}
