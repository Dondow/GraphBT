<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
         <command
          id="com.eclipse-tips.rcp.app.sessionCommand"
          name="Session Command">
    	</command>
      <command
            id="org.be.graphbt.simulator.command.ParseXMLCommand"
            name="Parse XML"
            description="Parsing XML to BT Specification">
      </command>
      <command
            description="Start Debug"
            id="org.be.graphbt.simulator.command.PlayCommand"
            name="Play">
            
      </command>
      <command
            description="Stop Debug"
            id="org.be.graphbt.simulator.command.StopCommand"
            name="Stop">
      </command>
      <command
            description="Pause Debug"
            id="org.be.graphbt.simulator.command.PauseCommand"
            name="Pause">
      </command>
      <command
            description="Step Debug"
            id="org.be.graphbt.simulator.command.StepCommand"
            name="Step">
      </command>
      <command
            defaultHandler="org.be.graphbt.simulator.commandHandler.SaveHandler"
            description="Save to Image"
            id="org.be.graphbt.simulator.command.SaveCommand"
            name="Save">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
         <menuContribution
          locationURI="menu:file?before=quit">
       <command
             commandId="com.eclipse-tips.rcp.app.sessionCommand"
             style="push">
       </command>
    </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
            <command
                  commandId="org.be.graphbt.simulator.command.ParseXMLCommand"
                  icon="resource/debug.gif"
                  label="Debug BT"
                  style="push">
                  <visibleWhen
                        checkEnabled="false">
                        <reference
                              definitionId="oneElementSelected">
                        </reference>
                  </visibleWhen>
            </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer">
         <command
               commandId="org.be.graphbt.simulator.command.ParseXMLCommand"
               icon="resource/debug.gif"
               label="Debug BT"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="oneElementSelected">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.be.graphbt.simulator.view.ZestDebuggerView?after=additions">
         <command
               commandId="org.be.graphbt.simulator.command.PlayCommand"
               icon="resource/resume_co.gif"
               label="Play"
               style="push">
               <visibleWhen
                     checkEnabled="false">
               </visibleWhen>
         </command>
         
         <command
               commandId="org.be.graphbt.simulator.command.StopCommand"
               icon="resource/progress_stop.gif"
               label="Stop"
               style="push">
               <visibleWhen
                     checkEnabled="false">
               </visibleWhen>
         </command>
         <command
               commandId="org.be.graphbt.simulator.command.PauseCommand"
               icon="resource/pause.gif"
               label="Pause"
               style="push">
               <visibleWhen
                     checkEnabled="false">
               </visibleWhen>
         </command>
         <command
               commandId="org.be.graphbt.simulator.command.StepCommand"
               icon="resource/stepover_co.gif"
               label="Step"
               style="push">
               <visibleWhen
                     checkEnabled="false">
               </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="oneElementSelected">
         <with
               variable="selection">
            <count
                  value="1">
            </count>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
         <handler
          class="com.eclipse_tips.rcp.app.handlers.LoginHandler"
          commandId="com.eclipse-tips.rcp.app.sessionCommand">
       <activeWhen>
          <with
                variable="com.eclipse-tips.rcp.app.sessionState">
             <equals
                   value="disabled">
             </equals>
          </with>
       </activeWhen>
    </handler>
    <handler
          class="com.eclipse_tips.rcp.app.handlers.LogoutHandler"
          commandId="com.eclipse-tips.rcp.app.sessionCommand">
       <activeWhen>
          <with
                variable="com.eclipse-tips.rcp.app.sessionState">
             <equals
                   value="enabled">
             </equals>
          </with>
       </activeWhen>
    </handler>
      <handler
            class="org.be.graphbt.simulator.commandHandler.StartPointParseXML"
            commandId="org.be.graphbt.simulator.command.ParseXMLCommand"
            helpContextId="org.be.graphbt.simulator.ParseXMLHandler">
      </handler>
      <handler
            class="org.be.graphbt.simulator.commandHandler.PlayHandler"
            commandId="org.be.graphbt.simulator.command.PlayCommand">
         <activeWhen>
            <with
                  variable="org.be.graphbt.simulator.sourceProvider.playState">
               <equals
                     value="enabled">
               </equals>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="org.be.graphbt.simulator.commandHandler.StopHandler"
            commandId="org.be.graphbt.simulator.command.StopCommand">
            <activeWhen>
            <with
                  variable="org.be.graphbt.simulator.sourceProvider.stopState">
               <equals
                     value="enabled">
               </equals>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="org.be.graphbt.simulator.commandHandler.PauseHandler"
            commandId="org.be.graphbt.simulator.command.PauseCommand">
            <activeWhen>
            <with
                  variable="org.be.graphbt.simulator.sourceProvider.pauseState">
               <equals
                     value="enabled">
               </equals>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="org.be.graphbt.simulator.commandHandler.StepHandler"
            commandId="org.be.graphbt.simulator.command.StepCommand">
            <activeWhen>
            <with
                  variable="org.be.graphbt.simulator.sourceProvider.stepState">
               <equals
                     value="enabled">
               </equals>
            </with>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.be.graphbt.simulator.perspective.DebuggerPerspective"
            fixed="false"
            icon="resource/debug.gif"
            id="org.be.graphbt.simulator.perspective.DebuggerPerspective"
            name="Debugger Perspective">
         <description>
            This perspective is used to be debugger view layout
         </description>
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="org.be.graphbt.simulator.view.ZestDebuggerView"
            icon="resource/debug.gif"
            id="org.be.graphbt.simulator.view.ZestDebuggerView"
            name="Zest Viewer"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            class="org.be.graphbt.simulator.view.StateVarDebuggerView"
            icon="resource/variable_view.gif"
            id="org.be.graphbt.simulator.view.StateVarDebuggerView"
            name="State Viewer"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="org.be.graphbt.simulator.sourceProvider.DebugToolsCommandSourceProvider">
         <variable
               name="org.be.graphbt.simulator.sourceProvider.playState"
               priorityLevel="activePartId">
         </variable>
         <variable
               name="org.be.graphbt.simulator.sourceProvider.stopState"
               priorityLevel="activePartId">
         </variable>
         <variable
               name="org.be.graphbt.simulator.sourceProvider.pauseState"
               priorityLevel="activePartId">
         </variable>
         <variable
               name="org.be.graphbt.simulator.sourceProvider.stepState"
               priorityLevel="activePartId">
         </variable>
      </sourceProvider>
   </extension>

</plugin>
